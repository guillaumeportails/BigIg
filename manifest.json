{
  "name": "Big Ig",
  "description": "Large pictures when browsing Instagram",
  "homepage_url": "https://github.com/nowhere",
  "manifest_version": 2,
  "version": "1.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "guillaumeportails@github.com",
      "strict_min_version": "55"
    }
  },

  // https://developer.mozilla.org/en-US/docs/Mozilla/Add-ons/WebExtensions/manifest.json/permissions
  "permissions": [
    "https://www.instagram.com/*/",
    "menus",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "commands": {
    "toggle-feature": {
      "suggested_key": { "default": "Alt+W" },
      "description": "Send a 'toggle-feature' event to the extension"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/p/*/"],
      "js": ["enlarge.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
