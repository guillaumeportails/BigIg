{
  "name": "Big Ig",
  "description": "Large pictures when browsing an Instagram user's feed",
  "homepage_url": "https://github.com/guillaumeportails/",
  "manifest_version": 2,
  "version": "1.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "guillaumeportails@github.com",
      "strict_min_version": "55.0"
    }
  },

  // https://developer.mozilla.org/en-US/docs/Mozilla/Add-ons/WebExtensions/manifest.json/permissions
  "permissions": [
    "https://www.instagram.com/*/",
    "menus",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"]
  }

}
